{
  "name": "Windows Action Sample PWA",
  "short_name": "Windows Action Sample PWA",
  "description": "A PWA demonstrating protocol handlers and share target",
  "lang": "en-US",
  "start_url": "./",
  "scope": "./",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "background_color": "#ffffff",
  "theme_color": "#2196F3",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "icons": [
    {
      "src": "https://cdn.glitch.com/47e82a3e-e99d-4a0a-86f9-4f8bea8ede1e%2Fastronaut-icon.png?v=1587002651149",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://cdn.glitch.com/47e82a3e-e99d-4a0a-86f9-4f8bea8ede1e%2Fastronaut-icon.png?v=1587002651149",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+pwa",
      "url": "./?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/WindowsAIActionTestPWA/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*"]
        }
      ]
    }
  }
}
